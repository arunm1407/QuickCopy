<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Settings"
                android:textColor="?attr/colorOnSurface"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <com.example.ocr.component.CustomIconTextView
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_share"
                android:drawableEnd="@drawable/ic_forward"
                android:drawablePadding="12dp"
                android:paddingVertical="16dp"
                android:text="Share"
                android:textColor="?attr/colorOnSurface" />

            <com.example.ocr.component.CustomIconTextView
                android:id="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_shield"
                android:drawableEnd="@drawable/ic_forward"
                android:drawablePadding="12dp"
                android:paddingVertical="16dp"
                android:text="Privacy Policy"
                android:textColor="?attr/colorOnSurface" />

            <com.example.ocr.component.CustomIconTextView
                android:id="@+id/knowledge_base"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_question"
                android:drawableEnd="@drawable/ic_forward"
                android:drawablePadding="12dp"
                android:paddingVertical="16dp"
                android:text="Knowledge Base"
                android:textColor="?attr/colorOnSurface" />

            <com.example.ocr.component.CustomIconTextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_sentiment"
                android:drawableEnd="@drawable/ic_forward"
                android:drawablePadding="12dp"
                android:paddingVertical="16dp"
                android:text="About Easy Copy"
                android:textColor="?attr/colorOnSurface" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
